<?xml version="1.0" encoding="UTF-8"?>
<ControlConfig>
	<profile name="primary" active="true">
	    <control type="joystick" name="transY" id="1"> <!--LJ-V-->
	        <maxInput value="1.0"/>
	        <minInput value="-1.0"/>
	        <deadzone value="0.02"/>
	        <equation value="2*x^3"/>
	    </control>
	    <control type="joystick" name="rot" id="0"> <!--RJ-H-->
	        <maxInput value="1.0"/>
	        <minInput value="-1.0"/>
	        <deadzone value="0.02"/>
	        <equation value="2*x^3"/>
	    </control>
		<control type="button" name="shooter" id="6"> <!--BMP-R-->
			<toggle value="false"/>
			<cooldown value="0.1"/>
		</control>
		<control type="button" name="armUp" id="4"> <!--BTN-Y-->
			<toggle value="false"/>
			<cooldown value="0.0"/>
		</control>
		<control type="button" name="armDown" id="1"> <!--BTN-A-->
			<toggle value="false"/>
			<cooldown value="0.0"/>
		</control>
		<control type="button" name="mandibles" id="5"> <!--BMP-L-->
			<toggle value="false"/>
			<cooldown value="0"/>
		</control>
	</profile>
	<profile name="secondary" active="false">
		<control type="joystick" name="armElevAlt" id="5"> <!--RJ-V-->
			<maxInput value="1.0"/>
	        <minInput value="-1.0"/>
	        <deadzone value="0.1"/>
	        <equation value="x"/>
		</control>
		<control type="joystick" name="extendArm" id="3"> <!--TGR-R-->
			<maxInput value="1.0"/>
	        <minInput value="-1.0"/>
	        <deadzone value="0.1"/>
	        <equation value="x"/>
		</control>
		<control type="button" name="fanOverride" id="6"> <!--BMP-R-->
			<toggle value="false"/>
			<cooldown value="0.0"/>
		</control>
		<control type="button" name="tail" id="2"> <!--BTN-B-->
			<toggle value="true"/>
			<cooldown value="0.2"/>
		</control>
	</profile>
</ControlConfig>
